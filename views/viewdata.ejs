<!DOCTYPE html>
<html>

<head>
  <title>Campus Return Request &bull; Submitted - IIT Mandi</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- fontawesome icons cdn -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css" crossorigin="anonymous">
  <!-- CSS stylesheet -->
  <!-- IMPORTANT : local paths are relative to the `public` dir. Refer to app.js for the setting -->
  <link rel="stylesheet" type="text/css" href="css/request_form.css">
  <!-- Fonts stylesheet -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Epilogue:wght@500&display=swap" rel="stylesheet"> 
</head>

<body>
  <div class="row container-fluid">
    <div class="col"><!-- left margin of main content --></div>
    <div id="form-outer" class="col-md-8 my-5 mx-1 px-4 py-4">
      <div class="row mx-3 my-3">
        <div class="col-md-auto px-2 py-2 d-flex justify-content-center">
          <!-- IMPORTANT : local paths are relative to the `public` dir. Refer to app.js for the setting -->
          <img src="images/iitm-logo.jpg" alt="IIT Mandi Logo" id="iitm-logo"/>
        </div>
        <div class="col px-3 py-2 form-heading ">
          <h1>Campus Return Request</h1>
        </div>
      </div>
        <div class="row g-3 px-3">
          <hr/>
          <div id="success-dialog" class="alert alert-success" role="alert">
            <h4 class="alert-heading">Submitted</h4>
            <p class="mb-0">Your request has been recorded !</p>
          </div>

          <p class="label-row group-label h4">Personal Details</p>
          <div class="col-md-6">
            <p class="form-label">First Name</p><p><%= data.fname %></p>
          </div>
          <div class="col-md-6">
            <p class="form-label"> Last Name</p><p><%= data.lname %></p>
          </div>
          <div class="col-sm-12">
            <p f class="form-label">Address</p><p><%= data.address %></p>
          </div>
          <div class="col-sm-6">
            <p class="form-label">City</p><p><%= data.city %></p>
          </div>
          <div class="col-sm-6">
            <p class="form-label">State</p><p><%= data.state %></p>
          </div>
          <div class="col-md-3">
            <p class="form-label">Roll Number</p><p><%= data.rollno %></p>
          </div>
          <div class="col-md-3">
            <p class="form-label">Program</p><p><%= data.program %></p>
          </div>
          <div class="col-md-6">
            <p class="form-label">Phone</p><p><%= data.phone %></p>
          </div>

        <div class="mt-4"><hr/></div>
        <p class="label-row group-label mb-2 h4">Vaccination Details<p>
        <!-- <span class="col double-line"></span> -->
        <div class="vac-container row">
          <div id="vac-status" class="mx-4 form-label col-sm-3">Vaccination status:</div>
          <div class="my-1 px-1 col-auto">
              <p>
                <% switch (data.inlineRadioOptions) {
                  case 'singly' : %> Singly Vaccinated
                <% break; case 'doubly' : %> Doubly Vaccinated
                <% break; case 'none' : %> Not Vaccinated
                <% break; default : %> Unknown
                <% } %>
              </p>
            <br/>
          </div>

            <div class="collapse show px-4" id="vacc-conditional">
              <div class="mx-1 form-label py-2">Preferred return period :</div>
              <div class="my-2">
                <div class="input-icons row">
                  <p class="col-sm-3 col-form-label">Beginning Date</p>
                  <p class="col-auto"><%= (data.date1 != null) ? data.date1.toString().slice(0,15) : "Unspecified" %></p>
                </div>
                <div class="input-icons row">
                  <p class="col-sm-3 col-form-label">Ending Date</p>
                  <p class="col-auto"><%= (data.date2 != null) ? data.date2.toString().slice(0,15) : "Unspecified" %></p>
                </div>
              </div>
            </div>
        </div>
        <% if (data.upload != '') { %>
          <p class="form-label mx-4"> Vaccination Proof </p>
          <div id="file-div" class="px-3 py-3">
            <embed type="<%= data.uploadType %>" src="<%= data.upload %>" 
              class="mx-auto d-block<% if (/image\/.*/.test(data.uploadType)) {%> img-fluid <% } %>"/>
          </div>
        <% } %>
        <div class="mt-4"><hr/></div>
        <div id="div-conditional2" class="px-3">
          <label class="form-label h4" for="reason">Reasons / Comments</label>
          <% if (data.reason !== '') { %>
            <p class="mb-5"><%= data.reason %></p>
          <% } else { %>
            <p class="text-muted small mb-5"><i>None</i></p>
          <% } %>
        </div>
          
      </div>
    </div>
    <div class="col"><!-- right margin of main content --></div>
    </div>
</body>

</html>
